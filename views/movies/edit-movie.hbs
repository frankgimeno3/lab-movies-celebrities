<h2>Edit movie</h2>



<form action="/movies/{{pelicula._id}}/edit" method="POST">
<label for="title">Title</label>
<input type="text" id="title" name="title" placeholder="{{pelicula.title}}">
<label for="genre">Genre</label>
<input type="text" id="genre" name="genre" placeholder="{{pelicula.genre}}">
<label for="plot">Plot</label>
<input type="text" id="plot" name="plot" placeholder="{{pelicula.plot}}">
<select name="cast" id="cast">
    {{#each actores}}
    <option value="{{_id}}">{{name}}</option>
    {{/each}}
</select>
<button type="submit">Edit movie</button>

</form>